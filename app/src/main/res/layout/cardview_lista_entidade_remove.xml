<android.support.v7.widget.CardView
    android:id="@+id/cardViewEntidadeRemove"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

                <ImageView
                    android:id="@+id/imageRemoveEntidade"
                    android:layout_width="300dp"
                    android:layout_height="130dp"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/eu"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/textNomeRemoveEntidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageRemoveEntidade"
                    android:layout_alignStart="@+id/imageRemoveEntidade"
                    android:layout_alignEnd="@+id/imageRemoveEntidade"
                    android:layout_marginStart="18dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="18dp"
                    android:gravity="center"
                    android:text="Text View"
                    android:textColor="#2bbd7e"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="273dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="170dp"
                    android:gravity="center"
                    android:text="Arraste para o lado para remover"
                    android:textColor="#2bbd7e"
                    android:textSize="16sp" />

        </RelativeLayout>

</android.support.v7.widget.CardView>