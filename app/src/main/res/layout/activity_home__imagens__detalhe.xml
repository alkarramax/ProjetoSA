<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_Imagens_Detalhe">

    <ImageButton
        android:id="@+id/imageButtonBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="364dp"
        android:layout_marginRight="364dp"
        android:background="@drawable/ic_arrow_back_black_24dp"
        android:onClick="voltarTela"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="407dp"
        android:layout_height="650dp"
        android:layout_marginTop="88dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/bookthumbnail"
            android:layout_width="380dp"
            android:layout_height="230dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="#2d2d2d"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/txtData"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookthumbnail"
            android:layout_alignStart="@+id/bookthumbnail"
            android:layout_alignLeft="@+id/bookthumbnail"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="162dp"
            android:layout_marginRight="162dp"
            android:text="Data doação/local(soft)"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtData"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="99dp"
            android:layout_marginRight="99dp"
            android:text="Nome Entidade"
            android:textColor="#000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtDescri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitle"
            android:layout_alignStart="@+id/txtTitle"
            android:layout_alignLeft="@+id/txtTitle"
            android:layout_alignEnd="@+id/txtTitle"
            android:layout_alignRight="@+id/txtTitle"
            android:layout_marginStart="67dp"
            android:layout_marginLeft="67dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="67dp"
            android:layout_marginRight="67dp"
            android:maxLines="20"
            android:text="Descrição"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/txtObj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtDescri"
            android:layout_alignLeft="@+id/txtDescri"
            android:layout_alignEnd="@+id/txtDescri"
            android:layout_alignRight="@+id/txtDescri"
            android:layout_alignBottom="@+id/txtDescri"
            android:layout_marginStart="-28dp"
            android:layout_marginLeft="-28dp"
            android:layout_marginEnd="-38dp"
            android:layout_marginRight="-38dp"
            android:layout_marginBottom="-43dp"
            android:text="Objetivo da doacao"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageButtonDoar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="283dp"
            android:layout_marginRight="283dp"
            android:layout_marginBottom="76dp"
            android:text="Participantes:"
            android:textColor="#000"
            android:textSize="18sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_above="@+id/imageButtonDoar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="336dp"
            android:layout_marginRight="336dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/eu" />


        <Button
            android:id="@+id/imageButtonDoar"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="64dp"
            android:background="@drawable/custom_button2"
            android:text="Doar"
            android:textColor="#020db0"
            android:onClick="proximaTelaDoar"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="674dp" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>