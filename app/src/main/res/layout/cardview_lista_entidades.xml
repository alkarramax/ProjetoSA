<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardViewEntidadeUpdate"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="15dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/imageUpdateEntidade"
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/eu" />

        <TextView
            android:id="@+id/textNomeUpdateEntidade"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageUpdateEntidade"
            android:layout_alignStart="@+id/imageUpdateEntidade"
            android:layout_alignEnd="@+id/imageUpdateEntidade"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="9dp"
            android:gravity="center"
            android:text="Text View"
            android:textColor="#82ada9"
            android:textSize="18sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>