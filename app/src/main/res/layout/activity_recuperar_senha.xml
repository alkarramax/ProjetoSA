<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/relativeLayoutEmail"
    tools:context=".RecuperarSenha">

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="50dp"
        android:id="@+id/textEmail"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="text" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="119dp"
        android:id="@+id/textSenha"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        app:errorEnabled="true"
        app:passwordToggleEnabled="true">


        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textEmail"
            android:hint="Senha"
            android:inputType="textPassword"
            android:layout_alignLeft="@+id/textEmail" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="189dp"
        android:id="@+id/textConfirmSenha"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        app:errorEnabled="true"
        app:passwordToggleEnabled="true">


        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textEmail"
            android:hint="Confirmar Senha"
            android:inputType="textPassword"
            android:layout_alignLeft="@+id/textEmail" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/resetarSenha"
        android:layout_marginTop="259dp"
        android:layout_width="300dp"
        android:layout_marginLeft="53dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button2"
        android:text="Resetar Senha"
        android:textColor="@color/colorAccent" />


</RelativeLayout>