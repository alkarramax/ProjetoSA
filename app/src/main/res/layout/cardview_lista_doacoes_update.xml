<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardViewDoacaoUpdate"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/imageUpdateDoacao"
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/eu"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/textNomeUpdateDoacao"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageUpdateDoacao"
            android:layout_alignStart="@+id/imageUpdateDoacao"
            android:layout_alignEnd="@+id/imageUpdateDoacao"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="9dp"
            android:gravity="center"
            android:text="Text View"
            android:textColor="#2bbd7e"
            android:textSize="16sp" />

        <TextView
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="170dp"
            android:gravity="center"
            android:text="Clique para alterar a doação"
            android:textColor="#2bbd7e"
            android:textSize="16sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>