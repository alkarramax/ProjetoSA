<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cardViewEntidadeUpdate"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="390dp"
    android:layout_height="200dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageDoacaoRemove"
            android:layout_width="306dp"
            android:layout_height="99dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="43dp"
            android:layout_marginEnd="41dp"
            android:src="@drawable/eu" />

        <TextView
            android:id="@+id/textNomeDoacaoRemove"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageDoacaoRemove"
            android:layout_alignEnd="@+id/imageDoacaoRemove"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="114dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:textColor="#2bbd7e"
            android:text="Text View"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_remover_Doacao"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/custom_button4"
            android:paddingTop="5dp"
            android:text="Clique aqui para remover esta doação"
            android:textColor="#2bbd7e"
            android:textSize="11sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>