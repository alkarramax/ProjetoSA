<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardview_id"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_marginTop="15dp"
    cardview:cardElevation="0dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/entidade_img_id"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:scaleType="centerCrop"
            android:background="#2d2d2d"/>

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:background="#ebeef0"
            android:layout_marginTop="120dp">

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="350dp"
            android:layout_height="160dp"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="30dp"
            cardview:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#2bbd7e">
            </RelativeLayout>

            <TextView
                android:id="@+id/nome_entidade_id"
                android:textColor="#234b61"
                android:textSize="23sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entidade Title"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/descricao_entidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descrição entidade"
                android:textSize="12sp"
                android:textColor="#82ada9"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="70dp"
                android:maxLines="3"
                android:maxLength="320"
                android:ellipsize="end"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v7.widget.CardView>