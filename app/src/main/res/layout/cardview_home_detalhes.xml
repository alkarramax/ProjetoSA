<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="730dp"
    cardview:cardElevation="0dp"
    android:id="@+id/cardview_id"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    tools:context=".Home_Imagens_Detalhe"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="730dp">


        <ImageView
            android:id="@+id/bookthumbnail"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#2d2d2d"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/imageButtonBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="368dp"
            android:layout_marginRight="368dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ic_arrow_back_white_24dp"
            android:onClick="voltarTela" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_baseline_more_vert_24px"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="360dp"
            android:onClick="tirarParticipacao"/>


        <TextView
            android:id="@+id/txtData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/bookthumbnail"
            android:layout_alignLeft="@+id/bookthumbnail"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="109dp"
            android:layout_marginBottom="390dp"
            android:inputType="text"
            android:text="Data doação"
            android:textColor="#82ada9"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="390dp"
            android:text="Data da doação:"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="320dp"
            android:layout_marginBottom="390dp"
            android:text="Hora:"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="360dp"
            android:layout_marginBottom="390dp"
            android:text="Hora"
            android:textColor="#82ada9" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="190dp"
            android:layout_marginEnd="216dp"
            android:layout_marginBottom="396dp"
            android:src="#b9bcbe" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="396dp"
            android:src="#b9bcbe" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtDescri"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="57dp"
            android:layout_marginLeft="57dp"
            android:layout_marginEnd="63dp"
            android:layout_marginRight="63dp"
            android:layout_marginBottom="43dp"
            android:gravity="center"
            android:text="Nome Entidade"
            android:textColor="#234b61"
            android:textSize="23sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="54dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="315dp"
            android:background="#ebeef0">

        </LinearLayout>

        <TextView
            android:id="@+id/txtDescri"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtObj"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="256dp"
            android:maxLines="5"
            android:text="Descrição"
            android:textColor="#234b61"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/txtObj"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="504dp"
            android:maxLines="10"
            android:text="Objetivo da doacao"
            android:textColor="#234b61"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_Doacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtObj"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16sp"
            android:layout_marginTop="20dp"
            android:text="Doações necessárias no momento:"
            android:textColor="#82ada9"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tipo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_Doacao"
            android:layout_alignParentStart="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="10dp"
            android:text="Tipo"
            android:textColor="#234b61"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tipo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tipo1"
            android:layout_alignBottom="@+id/tipo1"
            android:layout_marginStart="18dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/tipo1"
            android:text="Tipo"
            android:textColor="#234b61"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tipo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tipo2"
            android:layout_alignBottom="@+id/tipo2"
            android:layout_marginStart="21dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/tipo2"
            android:text="Tipo"
            android:textColor="#234b61"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tipo4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tipo3"
            android:layout_alignBottom="@+id/tipo3"
            android:layout_marginStart="21dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/tipo3"
            android:text="Tipo"
            android:textColor="#234b61"
            android:textSize="14sp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="33dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_button4"
            android:onClick="listaParticipantes"
            android:text="Participantes"
            android:textColor="#2bbd7e"
            android:textSize="12sp" />

        <Button
            android:id="@+id/imageButtonDoar"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="53dp"
            android:layout_marginRight="53dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_button3"
            android:text="Doar"
            android:textColor="#ffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textLocal"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="106dp"
            android:layout_marginBottom="390dp"
            android:text="Local"
            android:textColor="#82ada9"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="390dp"
            android:layout_toStartOf="@+id/textLocal"
            android:text="Local:"
            android:textSize="13sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/bookthumbnail"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-1dp"
            android:background="#2bbd7e">

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>