<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Home_Imagens_Detalhe">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="420dp"
            android:layout_height="650dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/bookthumbnail"
                android:layout_width="396dp"
                android:layout_height="260dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="#2d2d2d"
                android:scaleType="centerCrop"/>

            <ImageButton
                android:id="@+id/imageButtonBack"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignTop="@+id/bookthumbnail"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="360dp"
                android:layout_marginRight="360dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/ic_arrow_back_white_24dp"
                android:onClick="voltarTela"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/txtData"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bookthumbnail"
                android:layout_alignStart="@+id/bookthumbnail"
                android:layout_alignLeft="@+id/bookthumbnail"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="4dp"
                android:inputType="text"
                android:text="Data doação"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtData"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="89dp"
                android:layout_marginLeft="89dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="68dp"
                android:layout_marginRight="68dp"
                android:text="Nome Entidade"
                android:textColor="#000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txtDescri"
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTitle"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="96dp"
                android:layout_marginLeft="96dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="79dp"
                android:layout_marginRight="79dp"
                android:maxLines="20"
                android:text="Descrição"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/txtObj"
                android:layout_width="342dp"
                android:layout_height="35dp"
                android:layout_above="@+id/imageButtonDoar"
                android:layout_below="@+id/txtDescri"
                android:layout_alignStart="@+id/txtDescri"
                android:layout_alignLeft="@+id/txtDescri"
                android:layout_alignEnd="@+id/txtDescri"
                android:layout_alignRight="@+id/txtDescri"
                android:layout_marginStart="-73dp"
                android:layout_marginLeft="-73dp"
                android:layout_marginTop="29dp"
                android:layout_marginEnd="-38dp"
                android:layout_marginRight="-38dp"
                android:layout_marginBottom="125dp"
                android:text="Objetivo da doacao"
                android:textSize="16sp" />

            <TextView
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/imageButtonDoar"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="260dp"
                android:layout_marginRight="260dp"
                android:layout_marginBottom="76dp"
                android:text="Participantes:"
                android:textColor="#000"
                android:textSize="18sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_above="@+id/imageButtonDoar"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="336dp"
                android:layout_marginRight="336dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/eu" />


            <Button
                android:id="@+id/imageButtonDoar"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/custom_button2"
                android:text="Doar"
                android:textColor="#ffff"
                tools:layout_editor_absoluteX="33dp"
                tools:layout_editor_absoluteY="674dp" />

            <TextView
                android:id="@+id/textLocal"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bookthumbnail"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="157dp"
                android:layout_marginLeft="157dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="41dp"
                android:layout_toEndOf="@+id/txtData"
                android:layout_toRightOf="@+id/txtData"
                android:text="Local"
                android:textSize="16sp" />


        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>